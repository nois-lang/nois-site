{
  "overrides": [
    {
      "files": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.scss",
        "**/*.css",
        "**/*.json"
      ],
      "options": {
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "none",
        "semi": false,
        "arrowParens": "avoid"
      }
    }
  ]
}
